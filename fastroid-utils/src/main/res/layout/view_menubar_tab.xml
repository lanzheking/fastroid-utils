<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/xmlbtn_green_to_darkgreen">

    <FrameLayout
        android:id="@+id/menu_tab_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/manubar_height"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/manubar_height"
            android:layout_gravity="center">

            <RelativeLayout
                android:id="@+id/tab_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/tab_iv"
                    android:layout_width="@dimen/manubar_icon_size"
                    android:layout_height="@dimen/manubar_icon_size"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tab_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@id/tab_iv"
                    android:textStyle="bold" />

                <com.honestwalker.androidutils.views.QtyView
                    android:id="@+id/tag_qtyview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tab_iv"
                    android:layout_marginRight="10dp" />

            </RelativeLayout>


        </RelativeLayout>

    </FrameLayout>

</LinearLayout>